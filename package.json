{
	"name": "@remessenger/livepulse",
	"version": "2.0.0",
	"main": "server/server.js",
	"source": "src/server.ts",
	"targets": {
		"main": {
			"includeNodeModules": false
		}
	},
	"scripts": {
		"dev": "nodemon old/server.cjs",
		"start": "node old/server.cjs",

		"dev-tsx": "tsx watch ./src/server.ts",
		"start-tsx": "tsx ./src/server.ts",
		"dev-build": "node ./server/server.js",

		"prebuild-ts": "node src/scripts/prebuild.js",
		"build-ts": "parcel build",
		"postbuild-ts": "node src/scripts/postbuild.js",

		"preprod": "pnpm install",
		"prod": "node ./server.js"
	},
	"author": "The ReMessenger Project",
	"license": "MIT",
	"dependencies": {
		"@lxpt/azureflare": "^0.1.10",
		"@swc/helpers": "^0.5.13",
		"bcrypt": "^5.1.1",
		"chalk": "^4.1.2",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"email-validator": "^2.0.4",
		"express": "^4.21.0",
		"express-handlebars": "^8.0.1",
		"fast-xml-parser": "^4.5.0",
		"handlebars": "^4.7.8",
		"jsonwebtoken": "^9.0.2",
		"mailparser": "^3.7.1",
		"moment": "^2.30.1",
		"mongoose": "^8.6.3",
		"net": "^1.0.2",
		"reflect-metadata": "^0.2.2",
		"typescript": "^5.6.2",
		"uuid": "^10.0.0",
		"xml-formatter": "^3.6.3",
		"xml-js": "^1.6.11"
	},
	"devDependencies": {
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/node": "^22.5.5",
		"nodemon": "^3.1.7",
		"parcel": "^2.12.0",
		"prettier": "^3.3.3",
		"tsx": "^4.19.1"
	}
